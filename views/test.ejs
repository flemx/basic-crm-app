<!DOCTYPE html>
<html>

<head>
	<title>Accounts</title>

	<% include partials/head.ejs %>
		<!-- Header with meta tags and references -->

</head>

<body class="w3-light-grey">


	<% include partials/nav.ejs %>

	<!-- Top container -->
	<!-- Sidebar/menu -->
	<!-- Overlay effect when opening sidebar on small screens -->


<!-- !PAGE CONTENT! -->
<div class="w3-main" style="margin-left:300px;margin-top:43px;">



  
	
	<div class="lightbox" id="fl1">

  		
    <div class="field">
      <input type="text" placeholder="Name" name="Name">
    </div>
    <div class="field">
      <input type="text" placeholder="Industry" name="Industry">
    </div>
    <div class="field">
      <input type="text" placeholder="Phone" name="Phone">
    </div>
    <div class="field">
      <input type="text" placeholder="Employees" name="Employees">
    </div>
		 <div class="field">
      <input type="text" placeholder="Website" name="Website">
    </div>
    <div class="field">
      <button type="button" onclick="postAccounts()">Submit</button>
    </div>
  
	</div>
  
  
  <div class="w3-container">
		 <header class="w3-container" style="padding-top:22px">
    <h5><b><i class="fa fa-dashboard"></i>Accounts</b></h5>
  </header>
		
   <button class="w3-button w3-dark-grey add-button" data-featherlight=".lightbox">New &nbsp;<i class="glyphicon glyphicon-plus"></i></button>
		<div class="w3-animate-left table-responsive" >
			<table class="w3-table w3-striped w3-bordered w3-border w3-hoverable w3-white" id="contact-table-container">
				<thead>
					<th><input type="checkbox" id="selectAll"></th>
					<th>Name</th>
					<th>Industry</th>
					<th>Phone</th>
					<th>Employees</th>
					<th>Website</th>
				</thead>
				<% for(i=0;i<accounts.account.length;i++){  %>
							<tr>
								<td><input type="checkbox" value="<%= accounts.account[i].Id%>" class="inputID"></td>
								<td><%= accounts.account[i].Name %></td>
								<td><%= accounts.account[i].Industry %></td>
								<td><%= accounts.account[i].Phone %></td>
								<td><%= accounts.account[i].Employees %></td>
								<td><%= accounts.account[i].Website %></td>
							</tr>
				<% } %>
			</table>
    </div>
    <br>
   </div>
  
  

			<% include partials/footer.ejs %>
				<!-- Footer -->


		</div>

		<script>
				
			$(document).ready(function() {
				//Call Ajax function to load contacts table
				
				
				
			
				
				//Highlights contacts button when active
				$('#accounts-button').addClass('w3-blue');
				
				//Select all checkboxes
				$('#selectAll').click(function (e) {
    		$(this).closest('table').find('td input:checkbox').prop('checked', this.checked);
});
			});
		</script>
		<script src="/js/featherlight.min.js" type="text/javascript" charset="utf-8"></script>
</body>

</html>